@model IEnumerable<ZYW.Model.SysXCode>
@{
    Layout = "~/Areas/Main/Views/Shared/MainAreaLayout.cshtml";
}
<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink((string)ViewBag.Create, "Create")
</p>
<table>
    <tr>
        <th>
        </th>
        <th>
            @ViewBag.XCode
        </th>
        <th>
            @ViewBag.XName
        </th>
        <th>
            @ViewBag.XOrderNumber
        </th>
        <th>
            @ViewBag.XParentID
        </th>
        <th>
            @ViewBag.XDepth
        </th>
        <th>
            @ViewBag.XSource
        </th>
        <th>
            @ViewBag.XFlag
        </th>
        <th>
            @ViewBag.XRemark
        </th>
    </tr>
    @if (Model == null || Model.Count() == 0)
    {
        
        <tr class="center">
            <td class="warning" colspan="8">
                @ViewBag.NoData
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.ActionLink((string)ViewBag.Edit, "Edit", new { ID = item.XID }) |
                @Html.ActionLink((string)ViewBag.Details, "Details", new { ID = item.XID }) |
                @Html.ActionLink((string)ViewBag.Delete, "Delete", new { ID = item.XID })
            </td>
            <td>
                @item.XCode
            </td>
            <td>
                @item.XName
            </td>
            <td>
                @item.XOrderNumber
            </td>
            <td>
                @item.XParentID
            </td>
            <td>
                @item.XDepth
            </td>
            <td>
                @item.XSource
            </td>
            <td>
                @item.XFlag
            </td>
            <td>
                @item.XRemark
            </td>
        </tr>
        }
    }
</table>
