<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <!--[if IE]>
      <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <link href="@Url.Content("~/Content/a/base.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jqueryui/flick/1.10.2.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/a/layout.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/a/skin.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery/1.9.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery/ui/1.10.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery/jsrender.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/myJqExt.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/AjaxPost.js")" type="text/javascript"></script>    
    <script id="SubNavTemplate" type="text/x-jsrender">
        {{if empty }}
		    <h3>无子级</h3>
            <div>
                Nothing
            </div>
        {{else}}            
            {{for}}
		    <h3>{{>XName}}</h3>
            <div>
                <ul>
                {{if SubCode.length == 0}}
                    <li>Nothing</li>
                {{else}}
                {{for SubCode}}
                    <li><a href="#" title="{{attr:XName}}">{{>XName}}</a></li>
                {{/for}}
                {{/if}}
                </ul>
            </div>
            {{/for}}
        {{/if}}
    </script>
    <script type="text/javascript">
        $(function () {
            //DOM渲染自顶向下
            $.mvc.sysxcode.LoadPrimaryNav("navigator-list", { subnav: "subnav", process: function (a) {
                $(a).bind("click", function () {
                    $("a.defaultLoad").removeClass("navclick").removeClass("defaultLoad");
                    $(this).addClass("navclick").addClass("defaultLoad");
                });
            }
            });
        });
    </script>
    @RenderSection("jsAndcss", false)
</head>
<body>
    <div id="page-container">
        <div id="header">
            <div class="lang">
                @Html.ActionLink("English", "English", "Language", new { area = "", returnUrl = Html.ViewContext.HttpContext.Request.RawUrl }, new { title = "转为英文" })
                |
                @Html.ActionLink("中文", "Chinese", "Language", new { area = "", returnUrl = Html.ViewContext.HttpContext.Request.RawUrl }, new { title = "转为中文" })
            </div>
            <div id="navigator-list" class="cb">
            </div>
        </div>
        <div id="content-contianer">
            <div id="main-body">
                @RenderBody()
            </div>
            <div id="subnav">
            </div>
        </div>
        <div id="accordion">
        </div>
    </div>
</body>
</html>
